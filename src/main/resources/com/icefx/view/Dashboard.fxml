<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.icefx.controller.DashboardController"
            prefHeight="800.0" prefWidth="1400.0"
            styleClass="root">
    
    <!-- Top: Header -->
    <top>
        <VBox styleClass="dashboard-header">
            <HBox alignment="CENTER_LEFT" styleClass="gap-4">
                <Label text="IceFX Attendance System" 
                      style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: 700;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Dashboard" 
                      style="-fx-text-fill: #e3f2fd; -fx-font-size: 18px; -fx-font-weight: 600;"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center: Main Content -->
    <center>
        <HBox styleClass="gap-4 m-4">
            
            <!-- Left: Camera and Recognition -->
            <VBox styleClass="gap-4" prefWidth="700" HBox.hgrow="ALWAYS">
                
                <!-- Camera View Card -->
                <VBox styleClass="camera-panel gap-3" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" styleClass="gap-3">
                        <Label text="Live Camera Feed" 
                              style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #212121;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="fpsLabel" 
                              text="FPS: 0.0" 
                              styleClass="label-tertiary"/>
                    </HBox>
                    
                    <Separator/>
                    
                    <!-- Camera Display -->
                    <StackPane styleClass="camera-view-container" VBox.vgrow="ALWAYS" minHeight="450">
                        <ImageView fx:id="cameraView" 
                                  fitWidth="660" 
                                  fitHeight="450" 
                                  preserveRatio="true"
                                  smooth="true"/>
                        <ProgressIndicator fx:id="loadingIndicator" 
                                         visible="false"
                                         maxWidth="80"
                                         maxHeight="80"/>
                    </StackPane>
                    
                    <!-- Camera Controls -->
                    <HBox styleClass="gap-3" alignment="CENTER">
                        <Button fx:id="startCameraButton" 
                               text="â–¶  Start Camera" 
                               onAction="#handleStartCamera"
                               styleClass="button-success"
                               prefWidth="200"
                               style="-fx-font-size: 15px;"/>
                        <Button fx:id="stopCameraButton" 
                               text="â¸  Stop Camera" 
                               onAction="#handleStopCamera"
                               styleClass="button-danger"
                               prefWidth="200"
                               style="-fx-font-size: 15px;"/>
                    </HBox>
                    
                    <!-- Status Label -->
                    <Label fx:id="statusLabel" 
                          text="Camera is offline" 
                          styleClass="label-tertiary"
                          wrapText="true"
                          style="-fx-font-size: 14px;"/>
                </VBox>
                
                <!-- Recognition Status Card -->
                <VBox fx:id="recognitionPanel" 
                     styleClass="recognition-panel gap-2"
                     minHeight="120">
                    <Label text="Recognition Status" 
                          style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #212121;"/>
                    <Separator/>
                    <Label fx:id="recognitionLabel" 
                          text="Ready for face detection" 
                          styleClass="label-tertiary"
                          wrapText="true"
                          style="-fx-font-size: 16px; -fx-min-height: 60px; -fx-alignment: center-left;"/>
                </VBox>
                
            </VBox>
            
            <!-- Right: Statistics and Attendance -->
            <VBox styleClass="gap-4" prefWidth="650" HBox.hgrow="ALWAYS">
                
                <!-- Statistics Cards -->
                <HBox styleClass="gap-3">
                    <!-- Today Card -->
                    <VBox styleClass="stat-card-success gap-2" HBox.hgrow="ALWAYS">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                        <Label text="Today" 
                              style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 600;"/>
                        <Label fx:id="todayCountLabel" 
                              text="0" 
                              style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: 700;"/>
                        <Label text="Check-ins" 
                              style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 13px;"/>
                    </VBox>
                    
                    <!-- Week Card -->
                    <VBox styleClass="stat-card-info gap-2" HBox.hgrow="ALWAYS">
                        <Label text="This Week" 
                              style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 600;"/>
                        <Label fx:id="weekCountLabel" 
                              text="0" 
                              style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: 700;"/>
                        <Label text="Total Attendance" 
                              style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 13px;"/>
                    </VBox>
                </HBox>
                
                <!-- Attendance Table Card -->
                <VBox styleClass="attendance-panel gap-3" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" styleClass="gap-3">
                        <Label text="Today's Attendance" 
                              style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #212121;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ”„  Refresh" 
                               onAction="#handleRefresh"
                               styleClass="button-info"
                               style="-fx-font-size: 13px;"/>
                    </HBox>
                    
                    <Separator/>
                    
                    <!-- Attendance Table -->
                    <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="timeColumn" 
                                        text="Time" 
                                        prefWidth="110"
                                        sortable="true"/>
                            <TableColumn fx:id="nameColumn" 
                                        text="Name" 
                                        prefWidth="220"
                                        sortable="true"/>
                            <TableColumn fx:id="eventColumn" 
                                        text="Event" 
                                        prefWidth="140"
                                        sortable="true"/>
                            <TableColumn fx:id="confidenceColumn" 
                                        text="Confidence" 
                                        prefWidth="120"
                                        sortable="true"/>
                        </columns>
                        <placeholder>
                            <VBox alignment="CENTER" styleClass="gap-2 m-5">
                                <Label text="ðŸ“‹" style="-fx-font-size: 48px;"/>
                                <Label text="No attendance records for today" 
                                      styleClass="label-tertiary"
                                      style="-fx-font-size: 15px;"/>
                            </VBox>
                        </placeholder>
                    </TableView>
                </VBox>
                
            </VBox>
            
        </HBox>
    </center>
    
    <!-- Bottom: Footer -->
    <bottom>
        <HBox styleClass="panel-footer gap-4" alignment="CENTER">
            <Label text="Version 3.0" styleClass="version-label"/>
            <Separator orientation="VERTICAL"/>
            <Label text="Powered by OpenCV 4.9 &amp; JavaFX 23" styleClass="version-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="â— Status: Ready" 
                  style="-fx-text-fill: #4caf50; -fx-font-weight: 600; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
    
</BorderPane>
    
    <!-- Top: Header -->
    <top>
        <VBox style="-fx-background-color: #1976D2; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="IceFX Attendance System" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Dashboard" textFill="#E3F2FD">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center: Main Content -->
    <center>
        <HBox spacing="15" style="-fx-padding: 15;">
            
            <!-- Left: Camera and Recognition Panel -->
            <VBox spacing="15" prefWidth="600" HBox.hgrow="ALWAYS">
                
                <!-- Camera View -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Live Camera Feed" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="fpsLabel" text="FPS: 0.0" style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
                    </HBox>
                    
                    <Separator/>
                    
                    <!-- Camera ImageView -->
                    <StackPane style="-fx-background-color: #000000; -fx-min-height: 400;">
                        <ImageView fx:id="cameraView" 
                                  fitWidth="560" 
                                  fitHeight="400" 
                                  preserveRatio="true"/>
                        <ProgressIndicator fx:id="loadingIndicator" visible="false"/>
                    </StackPane>
                    
                    <!-- Camera Controls -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="startCameraButton" 
                               text="â–¶ Start Camera" 
                               onAction="#handleStartCamera"
                               style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 150;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="stopCameraButton" 
                               text="â¸ Stop Camera" 
                               onAction="#handleStopCamera"
                               style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 150;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </HBox>
                    
                    <!-- Status -->
                    <Label fx:id="statusLabel" 
                          text="Camera is off" 
                          style="-fx-font-size: 14px; -fx-text-fill: #757575;"
                          wrapText="true"/>
                </VBox>
                
                <!-- Recognition Panel -->
                <VBox fx:id="recognitionPanel" 
                     spacing="10" 
                     style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Label text="Recognition Status" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Separator/>
                    <Label fx:id="recognitionLabel" 
                          text="Ready" 
                          style="-fx-font-size: 16px; -fx-text-fill: #757575;"
                          wrapText="true"
                          minHeight="60"/>
                </VBox>
                
            </VBox>
            
            <!-- Right: Attendance and Statistics -->
            <VBox spacing="15" prefWidth="550" HBox.hgrow="ALWAYS">
                
                <!-- Statistics Cards -->
                <HBox spacing="15">
                    <VBox spacing="5" 
                         style="-fx-background-color: #4CAF50; -fx-padding: 20; -fx-background-radius: 5;"
                         HBox.hgrow="ALWAYS">
                        <Label text="Today" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="todayCountLabel" text="0" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                        <Label text="Check-ins" textFill="#E8F5E9">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>
                    
                    <VBox spacing="5" 
                         style="-fx-background-color: #2196F3; -fx-padding: 20; -fx-background-radius: 5;"
                         HBox.hgrow="ALWAYS">
                        <Label text="This Week" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="weekCountLabel" text="0" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                        <Label text="Total" textFill="#E3F2FD">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>
                </HBox>
                
                <!-- Recent Attendance -->
                <VBox spacing="10" 
                     style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
                     VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Today's Attendance" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ”„ Refresh" 
                               onAction="#handleRefresh"
                               style="-fx-background-color: #E0E0E0; -fx-cursor: hand;">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>
                    </HBox>
                    
                    <Separator/>
                    
                    <!-- Attendance Table -->
                    <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="timeColumn" 
                                        text="Time" 
                                        prefWidth="100"
                                        style="-fx-font-weight: bold;"/>
                            <TableColumn fx:id="nameColumn" 
                                        text="Name" 
                                        prefWidth="200"/>
                            <TableColumn fx:id="eventColumn" 
                                        text="Event" 
                                        prefWidth="120"/>
                            <TableColumn fx:id="confidenceColumn" 
                                        text="Confidence" 
                                        prefWidth="100"
                                        style="-fx-alignment: CENTER;"/>
                        </columns>
                        <placeholder>
                            <Label text="No attendance records for today" 
                                  style="-fx-text-fill: #757575;"/>
                        </placeholder>
                    </TableView>
                </VBox>
                
            </VBox>
            
        </HBox>
    </center>
    
    <!-- Bottom: Footer -->
    <bottom>
        <HBox alignment="CENTER" 
             spacing="20" 
             style="-fx-background-color: #F5F5F5; -fx-padding: 10;">
            <Label text="Version 2.0" style="-fx-font-size: 11px; -fx-text-fill: #757575;"/>
            <Separator orientation="VERTICAL"/>
            <Label text="Powered by OpenCV &amp; JavaFX" style="-fx-font-size: 11px; -fx-text-fill: #757575;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Status: Ready" style="-fx-font-size: 11px; -fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
    
</BorderPane>
