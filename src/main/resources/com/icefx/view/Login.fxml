<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.icefx.controller.LoginController"
            prefHeight="500.0" prefWidth="700.0"
            stylesheets="@../../application/application.css">
    
    <!-- Top: Header -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #1976D2; -fx-padding: 20;">
            <Label text="IceFX Attendance System" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <Label text="Face Recognition Attendance" textFill="#E3F2FD">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </VBox>
    </top>
    
    <!-- Center: Login Form -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <VBox alignment="CENTER" spacing="15" maxWidth="400">
                
                <!-- Title -->
                <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                
                <Separator />
                
                <!-- User Code Field -->
                <VBox spacing="5">
                    <Label text="User Code:" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="userCodeField" 
                              promptText="Enter your user code (e.g., STU001)"
                              prefHeight="40"
                              style="-fx-font-size: 14px;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </TextField>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="5">
                    <Label text="Password:" style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField" 
                                  promptText="Enter your password"
                                  prefHeight="40"
                                  style="-fx-font-size: 14px;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </PasswordField>
                </VBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" 
                      text="Error message will appear here"
                      textFill="RED"
                      wrapText="true"
                      visible="false"
                      style="-fx-font-weight: bold;"/>
                
                <!-- Login Button -->
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="loginButton" 
                           text="Login" 
                           onAction="#handleLogin"
                           defaultButton="true"
                           prefWidth="150"
                           prefHeight="45"
                           style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Button>
                    
                    <Button text="Cancel" 
                           onAction="#handleCancel"
                           cancelButton="true"
                           prefWidth="150"
                           prefHeight="45"
                           style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Button>
                </HBox>
                
                <!-- Progress Indicator -->
                <ProgressIndicator fx:id="progressIndicator" 
                                  visible="false"
                                  prefWidth="50"
                                  prefHeight="50"/>
                
            </VBox>
        </VBox>
    </center>
    
    <!-- Bottom: Info -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #F5F5F5; -fx-padding: 15;">
            <Label text="Version 2.0" style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
            <Separator orientation="VERTICAL"/>
            <Label text="Powered by OpenCV &amp; JavaFX" style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
        </HBox>
    </bottom>
    
</BorderPane>
