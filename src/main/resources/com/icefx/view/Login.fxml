<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.icefx.controller.LoginController"
            prefHeight="700.0" prefWidth="1000.0"
            styleClass="root">
    
    <!-- Top: Header -->
    <top>
        <VBox styleClass="login-header gap-3">
            <Label text="IceFX Attendance System" styleClass="login-title"/>
            <Label text="Face Recognition Powered Attendance Management" styleClass="login-subtitle"/>
        </VBox>
    </top>
    
    <!-- Center: Login Form -->
    <center>
        <VBox styleClass="login-container gap-4">
            <VBox styleClass="login-card gap-4" maxWidth="500">
                
                <!-- Title -->
                <VBox styleClass="gap-2 text-center">
                    <Label text="Welcome Back" styleClass="form-title"/>
                    <Label text="Sign in to continue to your account" styleClass="label-tertiary"/>
                </VBox>
                
                <Separator/>
                
                <!-- User Code Field -->
                <VBox styleClass="gap-2">
                    <Label text="User Code" styleClass="field-label"/>
                    <TextField fx:id="userCodeField" 
                              styleClass="login-field"
                              promptText="Enter your user code (e.g., ADMIN001)"
                              prefWidth="400"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox styleClass="gap-2">
                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="passwordField" 
                                  styleClass="login-field"
                                  promptText="Enter your password"
                                  prefWidth="400"/>
                </VBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" 
                      styleClass="error-message"
                      text="Error message will appear here"
                      wrapText="true"
                      visible="false"
                      maxWidth="400"/>
                
                <Region prefHeight="8"/>
                
                <!-- Action Buttons -->
                <HBox styleClass="gap-3" alignment="CENTER">
                    <Button fx:id="loginButton" 
                           text="Sign In" 
                           styleClass="login-button"
                           onAction="#handleLogin"
                           defaultButton="true"
                           prefWidth="180"/>
                    
                    <Button text="Cancel" 
                           styleClass="cancel-button"
                           onAction="#handleCancel"
                           cancelButton="true"
                           prefWidth="180"/>
                </HBox>
                
                <!-- Progress Indicator -->
                <StackPane>
                    <ProgressIndicator fx:id="progressIndicator" 
                                      visible="false"
                                      maxWidth="60"
                                      maxHeight="60"/>
                </StackPane>
                
                <!-- Helpful Text -->
                <VBox styleClass="gap-1 text-center m-3">
                    <Label text="Default Credentials" styleClass="label-tertiary"/>
                    <Label text="User: ADMIN001  |  Pass: admin123" styleClass="label-tertiary"/>
                </VBox>
                
            </VBox>
        </VBox>
    </center>
    
    <!-- Bottom: Footer -->
    <bottom>
        <HBox styleClass="login-footer gap-4" alignment="CENTER">
            <Label text="Version 3.0" styleClass="version-label"/>
            <Separator orientation="VERTICAL"/>
            <Label text="Powered by OpenCV 4.9 &amp; JavaFX 23" styleClass="version-label"/>
            <Separator orientation="VERTICAL"/>
            <Label text="JDK 23.0.1" styleClass="version-label"/>
        </HBox>
    </bottom>
    
</BorderPane>
